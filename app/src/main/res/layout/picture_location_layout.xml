<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="byteme.pictureparrot.PictureLocation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Image Location"
        android:id="@+id/imageLocation"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="42sp"
        android:textColor="#FFFD6666" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Image from Gallery"
        android:id="@+id/selectFromGallery"
        android:layout_marginTop="190dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#4dbbe8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Take Photo"
        android:id="@+id/takeNewPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:textSize="30dp"
        android:textColor="#4dbbe8" />


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:id="@+id/fromGallery"
        android:background="@drawable/gallery_image"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="470dp"
        android:id="@+id/takePhoto"
        android:background="@drawable/new_picture_image"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="15dp"
        android:id="@+id/settingsButton"
        android:background="@drawable/settings_icon3" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivImage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="300dp"/>


</RelativeLayout>
