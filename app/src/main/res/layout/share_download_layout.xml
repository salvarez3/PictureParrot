<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="byteme.pictureparrot.ShareDownload">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="500dp"
        android:id="@+id/modifiedImage" />

    <ImageButton
        android:id="@+id/menuItemShare"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/share_button"
        android:title="Share"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_below="@+id/modifiedImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />

    <ImageButton
        android:id="@+id/save_to_device"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/download_button"
        android:title="Download"
        android:layout_alignTop="@+id/menu_item_share"
        android:layout_toLeftOf="@+id/menu_item_share"
        android:layout_toStartOf="@+id/menu_item_share"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />
    <!--android:actionProviderClass="android.widget.ShareActionProvider"-->







</RelativeLayout>
